+ Demos sieve: size

| flags count |
flags := [nil] * size.

Log say: '1 iterations'; nl.  -- XXX 10

1 times-do: {  -- XXX make this 10
  count := 0.
  flags fill-with: true.
  0 till: size do: { :i |
    (flags at: i) if-so: {
      |prime| prime := i + i + 3.
      (i + prime) till: size by: prime do: { :k |
        flags at: k put: false
      }.
      count := count + 1.
    }.
  }.
}.

Log say: count; say: ' primes'; nl.
